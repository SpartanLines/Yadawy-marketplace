<div class="card-deck">

  <% @products.each do |product| %>


    <div class="card">
      <%= image_tag product.image.url(:productimage),size:"204x204"if product.image? %>
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <%= sanitize(product.specs) %>
        <div class="price card">
          <h3><%= number_to_currency(product.price) %></h3>
          <%= button_to 'Add to Cart', line_items_path(product_id: product),class:"btn-primary" %>
        </div>
      </div>

      <div class="card-footer">

        <%= button_to 'show',  product , class:"btn",:method => :get%>
        <%= button_to 'Edit', product , class:"btn", :method => :get %>
      </div>
    </div>

  <% end %>

</div>