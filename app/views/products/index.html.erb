<p id="notice"><%= notice %></p>
<%= form_tag products_path, :method =>'get' do %>
 <div class=" searchcontainer ">
   <div class="row">
      <div class="input-group mb-3 col-6">
      <%=text_field_tag :search, params[:search], class:"form-control", type:"text" %>

      </div>
      <div class="col-auto">
      <%= submit_tag "Search", class:"btn btn-primary" %>
      </div>
    </div>
 </div>
<% end  %>
<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Seller</th>
      <th>Specs</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <div class="card-deck">
    <% @products.each do |product| %>


      <div class="card">
        <%= image_tag product.image.url(:productimage) if product.image? %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <%= product.specs%>
        </div>
        <div class="card-footer">

          <%= button_to 'show',  product , class:"btn",:method => :get%>
        </div>
      </div>

    <% end %>
  </div>

</table>

<br>

<%= link_to 'New Product', new_product_path %>
